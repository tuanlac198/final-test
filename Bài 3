#include <iostream>
#include <string>

using namespace std;

std::string encodeString(const std::string& s) {
    if (s.empty()) {
        return "";
    }
    
    std::string encoded;
    char current_char = s[0];
    int count = 1;
    
    for (size_t i = 1; i < s.size(); ++i) {
        if (s[i] == current_char) {
            count++;
        } else {
            encoded += current_char;
            encoded += std::to_string(count);
            current_char = s[i];
            count = 1;
        }
    }
    
    // Thêm ký tự cuối cùng và số lượng của nó
    encoded += current_char;
    encoded += std::to_string(count);
    
    return encoded;
}

int main() {
    string s;
    cout << "Nhập chuỗi S: ";
    cin >> s;
    
    string encodedString = encodeString(s);
    cout << "Chuỗi đã mã hóa: " << encodedString << endl;
    
    return 0;
}
